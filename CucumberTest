package com.example;
import org.junit.platform.suite.api.ConfigurationParameter;
import org.junit.platform.suite.api.IncludeEngines;
import org.junit.platform.suite.api.SelectClasspathResource;
import org.junit.platform.suite.api.Suite;
import static io.cucumber.junit.platform.engine.Constants.PLUGIN_PROPERTY_NAME;
import static io.cucumber.junit.platform.engine.Constants.GLUE_PROPERTY_NAME;
/**
 * Cucumber Test Runner for HappyTailsAdoption
 * <p>
 * This class serves as the entry point for running Cucumber tests.
 * It runs all feature files for the HappyTailsAdoption project in the "features" directory
 * and uses step definitions in the "steps" package.
 * <p>
 * Author: Spring MVC Learning Project
 * Version: 1.0
 */
@Suite
@IncludeEngines("cucumber")
@SelectClasspathResource("features") // Feature files for HappyTailsAdoption go here: src/test/resources/features
@ConfigurationParameter(key = PLUGIN_PROPERTY_NAME, value = "pretty, summary, json:target/cucumber-reports/cucumber.json, html:target/cucumber-reports/cucumber.html")
@ConfigurationParameter(key = GLUE_PROPERTY_NAME, value = "steps") // Step definitions go here: src/test/java/steps
public class CucumberTest {
    // This class remains empty; it only configures the Cucumber test suite
}
